extends layout

block content
  h1 LightningChart JS 
    sup &reg; 
    | headless
    
  .container-lg
    .row
      img.col-8(src="/chart/0")
      .col
        h2 Edit the chart
        form(action="/chart", method="POST")
          .form-group
            label(for="theme-select") Choose theme:
            select.form-control(name="theme" id="theme-select")
              - var isDarkTheme = theme == 'dark'
              option(value="Dark", selected=isDarkTheme) Dark
              option(value="Light", selected=!isDarkTheme) Light
          .form-group
            label(for="title-select") Chart title:
            input.form-control(name="title" id="title-select" value=chartTitle)
          .form-group
            input.btn.btn-primary(type="submit", value="Submit")
    .row.mt-2
      img.col(src="/chart/1")
      img.col(src="/chart/2")
      img.col(src="/chart/3")
      img.col(src="/chart/4")
      img.col(src="/chart/5")
