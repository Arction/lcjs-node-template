{
  "name": "lcjs-node-template",
  "version": "1.0.0",
  "description": "Server template for use of LightningChart JS in a express based server.",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"\"npm run watch-ts\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:arction/lcjs/lcjs-examples/lcjs-node-template.git"
  },
  "keywords": [],
  "author": "Arction Ltd.",
  "license": "MIT",
  "dependencies": {
    "@arction/lcjs": "^4.1.0",
    "@arction/lcjs-headless": "^1.6.0",
    "@arction/xydata": "^1.4.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "pngjs": "^6.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.6",
    "@types/express-session": "^1.17.0",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^13.13.0",
    "@types/pug": "^2.0.4",
    "@types/sharp": "^0.28.0",
    "@types/shelljs": "^0.8.7",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "bootstrap": "^5.1.3",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "fs-extra": "^10.0.0",
    "jquery": "^3.5.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "pug": "^2.0.4",
    "ts-node": "^8.8.2",
    "typescript": "^4.9.4"
  }
}
